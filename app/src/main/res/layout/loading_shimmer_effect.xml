<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/spacing_16dp"
    android:paddingBottom="@dimen/spacing_16dp">

    <ImageView
        android:id="@+id/article_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginEnd="@dimen/spacing_8dp"
        android:background="@drawable/loading_bg"
        android:contentDescription="@string/news_illustration_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/article_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/article_title"
        android:layout_width="0dp"
        android:layout_height="@dimen/spacing_24dp"
        android:background="@drawable/loading_bg"
        app:layout_constraintBottom_toTopOf="@+id/article_published_at"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/article_image"
        app:layout_constraintTop_toTopOf="@id/article_image" />

    <TextView
        android:id="@+id/article_published_at"
        android:layout_width="0dp"
        android:layout_height="@dimen/spacing_16dp"
        android:layout_marginTop="@dimen/spacing_16dp"
        android:layout_marginEnd="@dimen/spacing_24dp"
        android:background="@drawable/loading_bg"
        app:layout_constraintBottom_toBottomOf="@+id/article_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/article_title"
        app:layout_constraintTop_toBottomOf="@+id/article_title" />


</androidx.constraintlayout.widget.ConstraintLayout>